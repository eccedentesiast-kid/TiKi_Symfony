{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/asset/css/loginRegisterForm.css" rel="stylesheet">
    <link href="" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script defer src="/asset/js/innerpage.js"></script>
{% endblock %}

{% block content %}
    {#============= Breadcrumbs Section =============#}
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="/">Home</a></li>
                <li>Sign in</li>
            </ol>
            <h2>Sign in</h2>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container d-flex justify-content-center login-register-form">
            <div class=" col-md-4 flex-column justify-content-center">
                <img src="/asset/img/identification.png" class="col-12 d-flex justify-content-center">
                <form class="row g-3 " novalidate>
                    <div class="">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control " id="email" aria-describedby="emailHelp" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div id="email-invalid" class="invalid-feedback">
                            Must be a valid email.
                        </div>
                    </div>

                    <div class="">
                        <label for="firstname" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstname" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div id="firstname-invalid" class="invalid-feedback">
                            Please enter a first name.
                        </div>
                    </div>
                    <div class="">
                        <label for="lastname" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastname" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div id="lastname-invalid" class="invalid-feedback">
                            Please enter a last name.
                        </div>
                    </div>
                    <div class="">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div id="password-invalid" class="invalid-feedback">
                            Must be 8-20 characters long.
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" type="button" onclick="submitRegisterForm()">Create my account</button>
                    </div>
                    <p style="place-content: center; display: flex">You already have an account?<a href="/login">&nbsp;Sign in now.</a></p>
                </form>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/asset/js/identification.js"></script>

{% endblock %}

