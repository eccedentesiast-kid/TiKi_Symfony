{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center ">
        <div class=" col-md-4 flex-column justify-content-center">
            <img src="\asset\IMG\identification.svg" class="col-12 d-flex justify-content-center" width="200px" height="200px">
            <form class="row g-3 " novalidate>
                <div class="">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control " id="email" aria-describedby="emailHelp" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="email-invalid" class="invalid-feedback">
                        Must be a valid email.
                    </div>
                </div>

                <div class="">
                    <label for="firstname" class="form-label">First name</label>
                    <input type="text" class="form-control" id="firstname" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="firstname-invalid" class="invalid-feedback">
                        Please enter a first name.
                    </div>
                </div>
                <div class="">
                    <label for="lastname" class="form-label">Last name</label>
                    <input type="text" class="form-control" id="lastname" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="lastname-invalid" class="invalid-feedback">
                        Please enter a last name.
                    </div>
                </div>
                <div class="">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" required>
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="password-invalid" class="invalid-feedback">
                        Must be 8-20 characters long.
                    </div>

                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" type="button" onclick="submitRegisterForm()">Create my account</button>
                </div>
                <a href="/login">You already have an account ?</a>

            </form>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="\asset\JS\identification.js"></script>

{% endblock %}

